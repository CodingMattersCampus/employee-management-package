{
    "name": "codingmatters/employee-management-package",
    "description": "Artisan Package for Employee Management",
    "license": "MIT",
    "type": "laravel-package",
    "authors": [
        {
            "name": "Gab Amba",
            "email": "codingmattersio@gmail.com"
        }
    ],
    "require": {
        "php": "~7.2.4",
        "illuminate/auth": "^5.6",
        "illuminate/contracts": "^5.6",
        "roave/security-advisories": "dev-master"
    },
    "require-dev": {
        "fzaninotto/faker": "^1.7",
        "mockery/mockery": "^1.0",
        "nesbot/carbon": "^1.32",
        "orchestra/testbench": "^3.6",
        "phpunit/phpunit": "^7.1",
        "sebastian/phpcpd": "^4.0",
        "zendframework/zend-coding-standard": "^1.0"
    },
    "autoload": {
        "psr-4": {
            "CodingMatters\\EmployeeManagement\\": "source/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "CodingMattersTest\\EmployeeManagement\\": "test/"
        }
    },
    "extra": {
        "branch-alias": {
            "dev-develop": "0.1.0-dev",
            "dev-master": "1.0.0-dev"
        },
        "laravel": {
            "providers": [
                "CodingMatters\\EmployeeManagement\\Providers\\EmployeeManagementServiceProvider"
            ]
        }
    },
    "minimum-stability": "stable",
    "scripts": {        
        "check": [
            "@cs-check",
            "@cpd",
            "@test"
        ],
        "cs-check": "phpcs",
        "cs-fix": "phpcbf",
        "cpd": "phpcpd --exclude=/vendor --fuzzy source",
        "test": "phpunit --verbose --colors=always"     
    },
    "config": {
        "preferred-install": "dist",
        "sort-packages": true,
        "optimize-autoloader": true
    }
}
